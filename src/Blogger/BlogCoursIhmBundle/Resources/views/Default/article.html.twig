{% extends 'BloggerBlogCoursIhmBundle:Default:baseblog.html.twig' %}

{% block title %}{{ parent() }} - Index{% endblock %}
{% block body %}
{% block header %}{{ parent()}}{% endblock %}
{% block corps %} {{ parent()}}
  <div class="section">
    <h2>{{ article.titre }}</h2>
    <i>Par {{ article.auteur }}, le {{ article.creationDate|date('d/m/Y') }}</i>
 
    <div class="well">
      {{ article.content }}
    </div>
    <br>
    <h3>Commentaires</h3>
    {% for comment in comments %}
    <a href="{{ path('blogger_blog_cours_ihm_articlepage', {'id': article.id}) }}" class="btn">
        <i class="icon-chevron-left"></i>
    </a>
    <i>Par {{ comment.auteur }}, le {{ comment.creationDate|date('d/m/Y') }}</i>
    <div class="well">
      {{ comment.content }}
    </div>
    {% endfor %}

    <br>
    <h3>Laisser un commentaire</h3>
    <form method="post" {{ form_enctype(form) }}>
      {{ form_widget(form) }}
      <input type="submit" class="btn btn-primary" />
    </form>
  </div>
